
<%= render "shared/sidebar", kid: @kid %>

<div>
  <div class="card-profile">
    <h1><strong><%= @kid.nickname %><strong></h1>
  </div>

  <div class="card-level shadow">
    <div>
      <h2><strong>Level <%= @kid.total_score + 1 %><strong></h2>
      <h4>score: <%= @kid.total_score %></h4>
      <hr>
      <h4>Here are your treasures!</h4>
      <p>Keep the adventure going</p>
      <div class="treasures">
        <% @kid.total_score.times do %>
          <%= image_tag "treasure-open.png", id: "treasure-open", alt: "chest closed", width: 60 %>
        <% end %>
        <% (@kid.games.size - @kid.total_score).times do %>
          <%= image_tag "treasure-closed-bw.png", id: "treasure-closed", alt: "chest closed", width: 60 %>
        <% end %>
      </div>
    </div>
  </div>
</div>
