<%= render "shared/logo" %>

<div class="container kids-index">

<% if @kids.any? %>
  <div>
    <h1><strong>Who wants to play?</strong></h1>
  </div>
    <% @kids.each do |kid| %>
      <div class="kids-card mt-5">
        <%= link_to  kid_games_path(kid), class:"text-decoration-none" do %>
          <%= cl_image_tag kid.avatar.photo.key, class:"avatar shadow" %>
        <% end %>
          <h2 class="my-4"><strong><%= kid.nickname %></i></strong></h2>

          <%= link_to kid_path(kid), data: { turbo_method: :delete, turbo_confirm: "Are you sure you don't wanna play anymore?" }, class:"delete-btn" do %>
          <i class="fa-solid fa-trash-can trash-icon"> </i>
        <% end %>
      </div>
    <% end %>
    <% else %>
      <h1><strong>Where are the kids?</strong></h1>
      <h1>ğŸ˜ƒ</h1>
      <br>
      <h4><em>You can add the first player by clicking here:</em></h4>
    <% end %>

  <footer>
    <%= link_to new_kid_path do%>
      <i class="fa-solid fa-circle-plus add-icon"></i>
    <% end %>
  </footer>
</div>
