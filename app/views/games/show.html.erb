<div class="container" data-controller="game">

  <h1><%= @game.name %></h1>

  <div class="card-sound" data-action="click->game#playSound">

    <audio src="<%= audio_path 'vermelho.mp3'%>" data-game-target="vermelho"></audio>
    <h5>VERMELHO
      <i class="fa-solid fa-play" data-action="click->game#playSound"></i>
    </h5>

  </div>

  <div class="cards">

    <div class="row">

      <div class="card col-4 mx-2" data-action="click->game#playAzul">
        <audio src="<%=audio_path 'azul.mp3' %>" data-game-target="azul"></audio>
          <p>Azul</p>
      </div>

      <div class="card col-4" data-action="click->game#playAmarelo">
        <audio src="<%=audio_path 'amarelo.mp3' %>" data-game-target="amarelo"></audio>
          <p>Amarelo</p>
      </div>

    </div>

    <div class="row mt-4">

      <div class="card col-4 mx-2" data-action="click->game#playVerde">
        <audio src="<%=audio_path 'verde.mp3' %>" data-game-target="verde"></audio>
          <p>Verde</p>
      </div>

      <div class="card col-4" data-action="click->game#playWin">

        <audio src="<%=audio_path 'vermelho_win.mp3' %>" data-game-target="win"></audio>
          <p>Vermelho</p>
      </div>

    </div>
  </div>

  <footer>
    <%= link_to lecture_kid_game_path(@game.kid, @game) do %>
      <i class="fa-solid fa-chevron-left"></i>
    <% end %>
  </footer>
</div>
