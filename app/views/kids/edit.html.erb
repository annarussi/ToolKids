<%= render "shared/sidebar", kid: @kid %>

<div class="container" data-controller="avatar">
   <div class="d-none" data-avatar-target="kidId">
    <%= @kid.id %>
  </div>

  <h1 class="text-center">
    Who do you want to be, <%= @kid.nickname.capitalize %>?
  </h1>
  <br>

    <div class="d-flex justify-content-around mt-1" >

      <div class="avatar-display" data-action="click->avatar#moanaAvatar">
        <audio src="<%= audio_path 'A-Moana.mp3'%>" data-avatar-target="moana"></audio>
        <%= cl_image_tag @moana.photo.key, class:"avatar shadow avatar-edit" %>
        <h5 class="avatar-edit text-center mt-3"><%= @moana.name.capitalize %></h5>
      </div>

      <div class="avatar-display" data-action="click->avatar#pocahontasAvatar">
        <audio src="<%= audio_path 'A-Pocahontas.mp3'%>" data-avatar-target="pocahontas"></audio>
        <%= cl_image_tag @pocahontas.photo.key, class:"avatar shadow avatar-edit" %>
        <h5 class="avatar-edit text-center mt-3"><%= @pocahontas.name.capitalize %></h5>
      </div>
    </div>

    <div class="d-flex justify-content-around my-4">
      <div class="avatar-display" data-action="click->avatar#mogliAvatar">
        <audio src="<%= audio_path 'Mogli.mp3'%>" data-avatar-target="mogli"></audio>
        <%= cl_image_tag @mogli.photo.key, class:"avatar shadow avatar-edit"  %>
        <h5 class="avatar-edit text-center mt-3"><%= @mogli.name.capitalize %></h5>
      </div>

      <div class="avatar-display" data-action="click->avatar#tarzanAvatar">
        <audio src="<%= audio_path 'Tarzan.mp3'%>" data-avatar-target="tarzan"></audio>
        <%= cl_image_tag @tarzan.photo.key, class:"avatar shadow avatar-edit"  %>
        <h5 class="avatar-edit text-center mt-3"><%= @tarzan.name.capitalize %></h5>
      </div>
    </div>

  <% if @kid.total_score >= 1 %>
    <div class="d-flex justify-content-around mt-4 mb-2">
      <div class="avatar-display" data-action="click->avatar#simbaAvatar">
        <audio src="<%= audio_path 'Simba.mp3'%>" data-avatar-target="simba"></audio>
        <%= cl_image_tag @simba.photo.key, class:"avatar shadow avatar-edit avatar-win"  %>
        <h5 class="avatar-edit text-center mt-3"><%= @simba.name.capitalize %></h5>
      </div>
  <% end %>

  <% if @kid.total_score >= 2 %>
      <div class="avatar-display" data-action="click->avatar#arielAvatar">
        <audio src="<%= audio_path 'A-Ariel.mp3'%>" data-avatar-target="ariel"></audio>
        <%= cl_image_tag @ariel.photo.key, class:"avatar shadow avatar-edit avatar-win"  %>
        <h5 class="avatar-edit text-center mt-3"><%= @ariel.name.capitalize %></h5>
      </div>
  <% end %>

  <% if @kid.total_score >= 3 %>
      <div class="avatar-display" data-action="click->avatar#capitaoAvatar">
        <audio src="<%= audio_path 'A-Ariel.mp3'%>" data-avatar-target="capitao"></audio>
        <%= cl_image_tag @capitao.photo.key, class:"avatar shadow avatar-edit avatar-win"  %>
        <h5 class="avatar-edit text-center mt-3"><%= @capitao.name.capitalize %></h5>
      </div>
  <% end %>

  <% if @kid.total_score >= 4 %>
      <div class="avatar-display" data-action="click->avatar#frozenAvatar">
        <audio src="<%= audio_path 'A-Ariel.mp3'%>" data-avatar-target="frozen"></audio>
        <%= cl_image_tag @frozen.photo.key, class:"avatar shadow avatar-edit avatar-win"  %>
        <h5 class="avatar-edit text-center mt-3"><%= @frozen.name.capitalize %></h5>
      </div>
  <% end %>
  </div>

  <div class="d-flex justify-content-center">
    <%= link_to "LET'S PLAY", kid_games_path(@kid), class:"btn-brown" %>
  </div>
</div>
